@model RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body p-5">
            <h2 class="fw-bold mb-3 text-center" style="color: #333;">Registrar nueva cuenta</h2>
            <p class="text-muted text-center mb-4">Ingrese los datos del nuevo usuario</p>

            <form asp-action="Registro">

                <!-- Email -->
                <div class="mb-3">
                    <span asp-validation-for="Email" class="text-danger d-block mb-1"></span>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control border-start-0" placeholder="Correo electrónico"
                               style="border-radius: 0.5rem; border: 1px solid #ced4da; transition: 0.3s;" />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <span asp-validation-for="Password" class="text-danger d-block mb-1"></span>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control border-start-0" placeholder="Contraseña"
                               style="border-radius: 0.5rem; border: 1px solid #ced4da; transition: 0.3s;" />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg fw-bold" style="border-radius: 0.5rem;">
                    Crear cuenta nueva
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@using SistemaInventarioApp.Entidades
@using Newtonsoft.Json
@model SistemaInventarioApp.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4 text-primary fw-bold">🚀 Panel de Control Rápido</h1>

    <div class="row mb-5 justify-content-center">

        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <a asp-controller="Productos" asp-action="Create" class="btn btn-primary btn-lg w-100 shadow-sm py-3 d-flex align-items-center justify-content-center btn-fixed-height">
                <i class="bi bi-box-seam me-2 fs-4"></i> Ingresar Nuevo Producto
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <a asp-controller="Productos" asp-action="Reingreso" class="btn btn-success btn-lg w-100 shadow-sm py-3 d-flex align-items-center justify-content-center btn-fixed-height">
                <i class="bi bi-arrow-down-left me-2 fs-4"></i> Reingresar Stock
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <a asp-controller="Productos" asp-action="Venta" class="btn btn-danger btn-lg w-100 shadow-sm py-3 d-flex align-items-center justify-content-center btn-fixed-height">
                <i class="bi bi-cash me-2 fs-4"></i> Venta (Salida Comercial)
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <a asp-controller="Productos" asp-action="Salida" class="btn btn-warning btn-lg w-100 shadow-sm py-3 text-dark d-flex align-items-center justify-content-center btn-fixed-height">
                <i class="bi bi-arrow-up-right me-2 fs-4"></i> Salida (Ajuste/Retiro)
            </a>
        </div>
    </div>

    <div class="row mb-5 justify-content-center">

        <div class="col-md-5 mb-3">
            <div class="card text-white bg-primary shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Total de Productos Distintos</h5>
                    <p class="display-6">@Model.TotalProductos</p>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-3">
            <div class="card text-white bg-danger shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Ventas Totales Hoy (Dinero)</h5>
                    <p class="display-6">$@Model.TotalDineroVendidoHoy.ToString("N2")</p>

                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">

        <div class="col-md-6">
            <div class="card border-warning shadow h-100">
                <div class="card-header bg-warning text-dark fw-bold d-flex justify-content-between align-items-center">
                    <span>⚠️ Productos con Stock Bajo (&lt;15)</span>
                    <a asp-controller="Productos" asp-action="StockBajoCompleto" class="btn btn-sm btn-dark">
                        Ver Lista Completa
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ProductosStockBajo.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var producto in Model.ProductosStockBajo)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@producto.Nombre</strong>
                                        <div class="small text-muted">Código: @producto.CodigoBarras</div>
                                    </div>
                                    <span class="badge bg-danger fs-6">@producto.Stock</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-success text-center" role="alert">
                            ¡Felicidades! No hay productos con stock bajo que requieran atención.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-success shadow h-100">
                <div class="card-header bg-success text-white fw-bold d-flex justify-content-between align-items-center">
                    <span>📈 Productos con Mayor Venta Hoy (Top 5)</span>
                    <a asp-controller="Movimientos" asp-action="EstadisticasMovimientos" class="btn btn-sm btn-light text-success">
                        Ver Estadísticas Completas
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ProductosMayorVentaDiaria.Any())
                    {
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Producto</th>
                                    <th class="text-end">Unidades Vendidas</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var rank = 1;
                                }
                                @foreach (var item in Model.ProductosMayorVentaDiaria)
                                {
                                    <tr>
                                        <td>@(rank++)</td>
                                        <td>@item.NombreProducto</td>
                                        <td class="text-end fw-bold">@item.CantidadVendida</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            Aún no se han registrado movimientos de venta el día de hoy.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light fw-bold">Gráfico: Productos con Menor Stock (Top 5)</div>
                <div class="card-body">
                    <canvas id="stockChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-light fw-bold">Gráfico: Volumen de Movimientos (Últimos 30 Días)</div>
                <div class="card-body">
                    <canvas id="movimientosChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Datos pasados desde el modelo
        var labelsStock = @Html.Raw(JsonConvert.SerializeObject(Model.LabelsStock));
        var dataStock = @Html.Raw(JsonConvert.SerializeObject(Model.DataStock));
        var labelsMovimientos = @Html.Raw(JsonConvert.SerializeObject(Model.LabelsMovimientos));
        var dataMovimientos = @Html.Raw(JsonConvert.SerializeObject(Model.DataMovimientos));

        // Gráfico stock (TIPO BARRA)
        new Chart(document.getElementById("stockChart"), {
            type: 'bar',
            data: {
                labels: labelsStock,
                datasets: [{
                    label: 'Stock Actual',
                    data: dataStock,
                    backgroundColor: 'rgba(255, 159, 64, 0.7)',
                    borderColor: 'rgba(255, 159, 64, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Gráfico movimientos (TIPO BARRA HORIZONTAL)
        new Chart(document.getElementById("movimientosChart"), {
            type: 'bar',
            data: {
                labels: labelsMovimientos.map(l => l === 'Ingreso' ? 'Ingreso' : l === 'Salida' ? 'Salida' : l),
                datasets: [{
                    label: 'Unidades Movidas',
                    data: dataMovimientos,
                    backgroundColor: [
                        'rgba(76, 175, 80, 0.7)', // Verde para Ingreso
                        'rgba(244, 67, 54, 0.7)', // Rojo para Salida
                        'rgba(33, 150, 243, 0.7)' // Azul para otros
                    ],
                    borderColor: [
                        'rgba(76, 175, 80, 1)',
                        'rgba(244, 67, 54, 1)',
                        'rgba(33, 150, 243, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y', // Hace el gráfico horizontal
                responsive: true,
                scales: {
                    x: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
@model SistemaInventarioApp.Entidades.Producto

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">Salida de Producto</h3>
        </div>
        <div class="card-body">
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-success">@ViewData["Mensaje"]</div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>

            <form asp-action="Salida" method="post">
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-upc-scan"></i> Código de Barras</label>
                    <input type="text" name="codigoBarras" class="form-control" placeholder="Ingrese código de barras" required />
                </div>
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-arrow-up-circle"></i> Cantidad a retirar</label>
                    <input type="number" name="cantidad" class="form-control" min="1" required />
                </div>
                <button type="submit" class="btn btn-warning"><i class="bi bi-dash-circle"></i> Retirar</button>
            </form>

            @if (Model != null && Model.Id > 0)
            {
                <h4 class="mt-4">Producto actualizado</h4>
                <dl class="row">
                    <dt class="col-sm-2">Nombre</dt>
                    <dd class="col-sm-10">@Model.Nombre</dd>

                    <dt class="col-sm-2">Descripción</dt>
                    <dd class="col-sm-10">@Model.Descripcion</dd>

                    <dt class="col-sm-2">Precio</dt>
                    <dd class="col-sm-10">@string.Format("{0:C}", Model.Precio)</dd>

                    <dt class="col-sm-2">Stock actualizado</dt>
                    <dd class="col-sm-10">@Model.Stock</dd>
                </dl>
            }
        </div>
    </div>
</div>

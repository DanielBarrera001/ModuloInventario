@using SistemaInventarioApp.Servicios
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    Sistema de Inventario - Despensa Jadis
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Index">Lista de productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Reingreso">Reingreso de producto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Salida">Salida de producto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Reportes" asp-action="Index">Reportes</a>
                        </li>

                        @if (User.IsInRole(Constantes.RolAdmin))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Usuarios" asp-action="Listado">Listado de usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Movimientos" asp-action="Index">Movimientos</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LinksLogin" />
                </div>
            </div>
        </nav>
    </header>


    <!-- Contenedor principal -->
    <div class="container mt-4" style="max-width: 1200px;">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-center text-muted bg-light py-3">
        &copy; @DateTime.Now.Year - Sistema de Inventario Despensa Jadis
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

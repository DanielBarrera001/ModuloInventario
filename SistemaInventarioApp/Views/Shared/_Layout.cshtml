@using SistemaInventarioApp.Servicios
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header id="main-header">

        <div id="hero-banner" class="d-flex align-items-center justify-content-center">
            <div class="text-center p-5">

                <img src="~/images/ranitaLogo.png" alt="Logo La Ranita" class="logo-ranita" />

                <h1 class="text-white display-4 fw-bold shadow-text">
                    UDP Centro de Copias La Ranita
                </h1>

            </div>
        </div>
        <div id="main-navbar-container">
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        Sistema de Inventario
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Index">Lista de productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Reingreso">Reingreso de producto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Venta">Venta de producto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Productos" asp-action="Salida">Salida de producto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Reportes" asp-action="Index">Reportes</a>
                            </li>

                            @if (User.IsInRole(Constantes.RolAdmin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" asp-controller="Usuarios" asp-action="Listado">Listado de usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fw-bold" asp-controller="Movimientos" asp-action="Index">Movimientos</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LinksLogin" />
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <div class="container mt-4" style="max-width: 1200px;">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center text-muted bg-light py-3">
        &copy; @DateTime.Now.Year - Sistema de Inventario UDP Centro de Copias La Ranita
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
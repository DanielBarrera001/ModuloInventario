@using SistemaInventarioApp.Controllers
@model List<ProductoMovimientoVolumen>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Producto</th>
                    <th>Código</th>
                    <th class="text-end">Unidades Movidas</th>
                    <th class="text-end">Stock Actual</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var rank = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(rank++)</td>
                        <td><strong>@item.NombreProducto</strong></td>
                        <td>@item.CodigoBarras</td>
                        <td class="text-end fw-bold">@item.CantidadMovida</td>
                        <td class="text-end">@item.StockActual</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center" role="alert">
        No se registraron movimientos de este tipo en el periodo seleccionado.
    </div>
}